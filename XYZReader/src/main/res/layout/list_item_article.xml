<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_default"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.view.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_dynamic_height_default"
            android:background="@color/photo_placeholder"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/padding_default"
            android:paddingEnd="@dimen/tv_padding_default"
            android:paddingLeft="@dimen/tv_padding_default"
            android:paddingRight="@dimen/tv_padding_default"
            android:paddingStart="@dimen/tv_padding_default"
            android:paddingTop="@dimen/tv_padding_default"
            android:textColor="@color/secondary_text_color"
            tools:text="An Empire State Building" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/tv_padding_default"
            android:paddingEnd="@dimen/tv_padding_default"
            android:paddingLeft="@dimen/tv_padding_default"
            android:paddingRight="@dimen/tv_padding_default"
            android:paddingStart="@dimen/tv_padding_default"
            android:textColor="@color/primary_text_color"
            tools:text="Jun 19, 2013 by Ivan Magda" />
    </LinearLayout>

</android.support.v7.widget.CardView>
